<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_sales_order_line_list" model="ir.ui.view">
        <field name="name">sales.order.line.list</field>
        <field name="model">sales.order.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="quantity"/>
                <field name="price_unit"/>
                <field name="subtotal"/>
                <field name="is_discounted"/>
            </list>
        </field>
    </record>

    <record id="view_sales_order_line_form" model="ir.ui.view">
        <field name="name">sales.order.line.form</field>
        <field name="model">sales.order.line</field>
        <field name="arch" type="xml">
            <form string="Order Line">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="quantity"/>
                        <field name="price_unit"/>
                        <field name="subtotal" readonly="1"/>
                        <field name="is_discounted"/>
                        <field name="order_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
