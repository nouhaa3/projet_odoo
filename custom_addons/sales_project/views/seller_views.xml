<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- LIST VIEW -->
    <record id="view_sales_seller_list" model="ir.ui.view">
        <field name="name">sales.seller.list</field>
        <field name="model">sales.seller</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="is_available"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_sales_seller_form" model="ir.ui.view">
        <field name="name">sales.seller.form</field>
        <field name="model">sales.seller</field>
        <field name="arch" type="xml">
            <form string="Seller">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="is_available" readonly="1"/>
                        <field name="order_ids" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_sales_seller" model="ir.actions.act_window">
        <field name="name">Sellers</field>
        <field name="res_model">sales.seller</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
